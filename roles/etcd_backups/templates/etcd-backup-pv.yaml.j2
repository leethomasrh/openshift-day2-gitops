apiVersion: v1
kind: PersistentVolume
metadata:
  name: {{ etcd_backup_volume_name }}
spec:
  capacity:
    storage: {{ etcd_backup_volume_size }}
  accessModes:
    - ReadWriteOnce
  persistentVolumeReclaimPolicy: Retain
  storageClassName: {{ etcd_backup_storage_class }}
  nfs:
    path: {{ etcd_nfspath }}
    server: {{ etcd_nfsserver }}
