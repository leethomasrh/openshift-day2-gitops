apiVersion: v1
kind: List
items:

- kind: StorageClass
  apiVersion: storage.k8s.io/v1
  metadata:
    annotations:
      description: {{ vsphere_storageClass_desc }} 
    name: {{ vsphere_storageClass_name }}
  parameters:
    datastore: {{ vsphere_storageClass_datastore }}
    diskformat: thin
  provisioner: kubernetes.io/vsphere-volume
  reclaimPolicy: {{ vsphere_storageClass_reclaimPolicy }}
  volumeBindingMode: Immediate
